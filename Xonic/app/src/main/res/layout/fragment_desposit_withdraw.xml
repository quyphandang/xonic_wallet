<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="10"
    android:id="@+id/maindeswith">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/backid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_white"
            android:fontFamily="@font/roboto_regular"
            android:text="back"
            android:gravity="top|left"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorBackground"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageqr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/iconcos" />
    </LinearLayout>

    <TextView
        android:id="@+id/balance_desposit_withdraw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Back"
        android:textColor="@color/colorText"
        android:textIsSelectable="false"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/despositid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/desposit_24dp"
            android:text="Desposit"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/border_white"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/withdrawid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/withdraw"
            android:text="Withdraw"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/border_white"
            android:textColor="@color/colorText" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Transaction History"
        android:textColor="@color/colorBackground"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#FFFFFF"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    </LinearLayout>
</LinearLayout>