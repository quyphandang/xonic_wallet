<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/backid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:text="Back"
            android:textColor="#2D0775" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageqr"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/iconcos" />
    </LinearLayout>

    <TextView
        android:id="@+id/balance_desposit_withdraw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Back"
        android:textColor="#2D0775"
        android:fontFamily="@font/roboto_regular"
        android:textIsSelectable="false"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/despositid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/desposit_24dp"
            android:text="Desposit"
            android:background="#FFFFFF"
            android:textColor="#2D0775" />

        <Button
            android:id="@+id/withdrawid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/withdraw_24dp"
            android:text="Withdraw"
            android:background="#FFFFFF"
            android:textColor="#2D0775" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#FFFFFF"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>